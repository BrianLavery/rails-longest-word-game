<div class="container">
  <div class="row d-flex justify-content-center mb-5 mt-3">
    <h1>New game</h1>
  </div>

  <div class="cards">
    <% @letters.each do |letter| %>
    <div class="card"><p><%= letter %></p></div>
    <% end %>
  </div>

  <div class="row d-flex justify-content-center mt-5">
    <p id="instruction">Submit your answer below</p>
  </div>

  <div class="row d-flex justify-content-center mb-5 mt-3">
    <form action="/score" method="POST">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="form-group d-flex justify-content-center" id="answer-form">
        <input type="text" name="answer" id="answer-input">
      </div>
      <div class="form-group d-flex justify-content-center">
        <input type="submit" value="submit" id ="submit-button" class="btn btn-success">
      </div>
    </form>
  </div>

</div>

